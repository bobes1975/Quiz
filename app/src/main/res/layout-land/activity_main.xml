<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start"
    tools:context="com.example.android.gamesquizlinear.MainActivity">


    <TextView
        style="@style/intro"
        android:id="@+id/quiz"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/ms_dos_game_quiz"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/name"
        style="@style/intro"
        android:layout_alignStart="@+id/quiz"
        android:layout_below="@+id/quiz"
        android:layout_marginHorizontal="@dimen/activity_vertical_margin"
        android:text="@string/into"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/intro1"
        style="@style/intro"
        android:layout_above="@+id/start"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="@dimen/activity_vertical_margin"
        android:text="@string/into1"
        android:textStyle="bold"
        android:textSize="20sp" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:onClick="start"
        android:text="Start" />


</RelativeLayout>
